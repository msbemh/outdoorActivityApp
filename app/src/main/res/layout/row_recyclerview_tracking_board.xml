<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.TogetherActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView_tracking_thumbnail"
                android:layout_width="90dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:src="@drawable/icon_route"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imageView_tracking_thumbnail"
                android:layout_toRightOf="@id/imageView_tracking_thumbnail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="제목:" />

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/textView"
                android:text="-" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="5dp"
                android:text="ID:" />

            <TextView
                android:id="@+id/textView_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView2"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/textView2"
                android:text="-" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:text="Name:" />

            <TextView
                android:id="@+id/textView_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_user_id"
                android:layout_alignTop="@id/textView3"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/textView3"
                android:text="-" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/textView3"
                android:text="생성날짜:" />

            <TextView
                android:id="@+id/textView_creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_alignTop="@id/textView4"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/textView4"
                android:text="-" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
