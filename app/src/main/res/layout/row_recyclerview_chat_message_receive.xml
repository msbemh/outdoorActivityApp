<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.TogetherActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#7799CF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="64dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="321dp"
            android:src="@drawable/icon_profile_invert" />

        <TextView
            android:id="@+id/textView_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_profile"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:text="닉네임" />

        <TextView
            android:id="@+id/textView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_nick_name"
            android:layout_alignStart="@+id/textView_nick_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/speach_bubble_receive"
            android:gravity="center"
            android:maxWidth="250dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:text="안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_message"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/textView_message"
            android:text="시간" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
